<% provide(:title, "#{@project.project_title}") %>
<h1><%= @project.project_title %></h1>

<div class="row">
		
	<div class="hero-unit">
		<p class="center hero-unit">
		<%= image_tag @project.image_url.to_s %>
		</p>
		<h2>Description: </h2>
		<p><%= @project.description %></p>

	</div> 
	<div class="hero-unit">
		<p><strong>Problem:</strong><br><%= @project.problem %></p>
		<p><strong>Solution:</strong><br><%= @project.solution %></p>
		<p><strong>Status:</strong><br><%= @project.status %></p>
	</div>

	<%= link_to "Edit Project", edit_project_path, class: "btn btn-large btn-primary" %>
</div>