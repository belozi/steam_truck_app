<% provide(:title, 'New Project') %>

<h1>New Project</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@project) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			<div class="field">
				<%= f.text_area :project_title, placeholder: "Add title..." %>
				<%= f.text_area :description, placeholder: "Add description..." %>
				<%= f.text_area :problem, placeholder: "Add problem..." %>
				<%= f.text_area :solution, placeholder: "Add solution...." %>
				<%= f.text_area :status, placeholder: "Current satus..." %>
			</div>
			<%= f.submit "Start Project", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>